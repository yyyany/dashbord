{
  "version": 2,
  "builds": [
    {
      "src": "Board/Front/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.+\\.[a-zA-Z]+)$",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "buildCommand": "cd Board/Front && npm install && npm run build",
  "outputDirectory": "Board/Front/build"
} 